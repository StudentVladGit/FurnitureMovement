@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace FurnitureMovement.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />

    <!-- Подключение Bootstrap 5 (обязательно для Blazorise.Bootstrap5) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Подключение Blazorise и его тем -->
    <link href="_content/Blazorise/blazorise.css" rel="stylesheet" />
    <link href="_content/Blazorise.Bootstrap5/blazorise.bootstrap5.css" rel="stylesheet" />

    <!-- Подключение иконок (например, FontAwesome) -->
    <link href="_content/Blazorise.Icons.FontAwesome/css/all.min.css" rel="stylesheet" />

    <!-- Ваши собственные стили -->
    <link href="css/site.css" rel="stylesheet" />
    <link href="FurnitureMovement.styles.css" rel="stylesheet" />

    <link rel="icon" type="image/png" href="favicon.png" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <!-- Подключение скриптов Bootstrap и Blazorise -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="_content/Blazorise/blazorise.js"></script>
    <script src="_content/Blazorise.Bootstrap5/blazorise.bootstrap5.js"></script>

    <!-- Скрипт Blazor Server -->
    <script src="_framework/blazor.server.js"></script>
</body>
</html>