@inherits LayoutComponentBase


<PageTitle>Движение оснастки</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <button class="btn btn-primary notification-btn" @onclick="ToggleNotificationPanel">
                <i class="fas fa-bell"></i>
                @if (unreadCount > 0)
                {
                    <span class="badge bg-danger">@unreadCount</span>
                }
            </button>
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">О нас</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<NotificationPanel @ref="notificationPanel" />

@code {
    private NotificationPanel notificationPanel = new NotificationPanel();
    private int unreadCount = 0;

    private void ToggleNotificationPanel()
    {
        notificationPanel?.Toggle();
        unreadCount = 0; // Сбрасываем счетчик при открытии
        StateHasChanged();
    }
}